<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Nhập thông tin</h2>
                    <hr />
                    <form action="/TaiKhoan/ThemTK" method="post" class="dangki">
                        <div class="form-group">
                            <label for="TenKH">Họ tên:</label>
                            <input name="TenKH"
                                   type="text"
                                   class="form-control"
                                   id="TenKH" placeholder="Nguyễn Công Phượng"/>
                        </div>
                        <div class="form-group">
                            <label for="GioiTinh">Giới tính:</label>
                            <select name="GioiTinh"
                                    type="text"
                                    class="form-control"
                                    id="GioiTinh">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>    
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="SDT">SDT:</label>
                            <input name="SDT"
                                   type="text"
                                   class="form-control"
                                   id="SDT" placeholder="0379696411"/>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input name="Email"
                                   type="email"
                                   class="form-control"
                                   id="Email" placeholder="CongPhuong@gmail.com" />
                        </div>
                        <div class="form-group">
                            <label for="CMND">CMND:</label>
                            <input name="CMND"
                                   type="text"
                                   class="form-control"
                                   id="CMND" placeholder="272810711"/>
                        </div>
                        <div class="form-group">
                            <label for="DiaChi">Địa chỉ:</label>
                            <input name="DiaChi"
                                   type="text"
                                   class="form-control"
                                   id="DiaChi" placeholder="Linh Trung, Thủ Đức, Hồ Chí Minh"/>
                        </div>
                        <div class="form-group">
                            <label for="MatKhau">Mật khẩu:</label>
                            <input name="MatKhau"
                                   type="password"
                                   class="form-control"
                                   id="MatKhau" placeholder="Nhập mật khẩu"/>
                        </div>
                        <div class="form-group">
                            <label for="confirm-pass">Nhập lại mật khẩu:</label>
                            <input name="confirm-pass"
                                   type="password"
                                   class="form-control"
                                   id="confirm-pass" 
                                   placeholder="Nhập lại mật khẩu"
                                   oninput="check(this)"/>
                        </div>
                        <div class="message"></div>
                        <input type="submit"
                               value="Đăng kí"
                               class="btn btn-default" />
                    </form>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>
