@{ 
    TinTuc TTuc = new TinTuc();
    TTuc = ViewBag.TTuc;
}
@{
    <form class="content-wrapper" style="min-height: 639px;" action="/Admin/TinTuc/UpdateTinTuc" method="post" id="frid">
        <section class="content-header">
            <h1><i class="glyphicon glyphicon-book"></i> Cập nhật bài viết</h1>
            <div class="breadcrumb">
                <button type="submit" class="btn btn-primary btn-sm" role="button" style="width: 67.81px; height: 30px; padding: 5px 10px; border: 1px">
                    <i class="glyphicon glyphicon-save">
                        Lưu
                    </i>
                </button>
                <a class="btn btn-primary btn-sm" href="/Admin/TinTuc/Index" role="button">
                    <span class="glyphicon glyphicon-remove do_nos"></span> Thoát
                </a>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row"> 
                <div class="col-md-12">
                    <div class="box" id="view">
                        <div class="box-body">
                            <form action="/Admin/TinTuc/UpdateTinTuc" method="post">
                                <div class="col-md-8">
                                    <input name="matintuc" value="@TTuc.matintuc" style="display:none">
                                    <div class="form-group">
                                        <label>Tiêu đề bài viết</label>
                                        <input type="text" class="form-control" name="tieude" style="width:100%" placeholder="Tên bài viết" value="@TTuc.tieude">
                                    </div>
                                    <div class="form-group">
                                        <label>Link bài viết</label>
                                        <input type="text" class="form-control" name="link" style="width:100%" placeholder="Link bài viết" value="@TTuc.link">
                                    </div>
                                    <div class="form-group">
                                        <label>Nội dung bài viết</label>
                                        <textarea style="width:100%; height:100%" name="noidung" form="frid">@TTuc.noidung</textarea>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Hình đại diện</label>
                                        <input type="file" id="image_list" name="hinhbia" style="width: 100%" required="" value="@TTuc.hinhbia">
                                    </div>
                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select name="trangthai" class="form-control" style="width:235px">
                                            @if (@TTuc.trangthai == 1)
                                            {
                                                <option value="1" selected>Đăng</option>
                                                <option value="0">Chưa đăng</option>
                                            }
                                            else
                                            {
                                                <option value="0" selected>chưa đăng</option>
                                                <option value="1">Đăng</option>
                                            }

                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
}
