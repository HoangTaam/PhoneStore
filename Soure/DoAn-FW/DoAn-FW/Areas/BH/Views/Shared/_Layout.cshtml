    <link rel="icon" type="~/image/x-icon" href="~/img/iconu.png">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/AdminLTE.css">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <meta property="fb:app_id" content="659513967881060">
    <link rel="stylesheet" href="~/css/_all-skins.min.css">
    <script src="~/js/loader.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
</head>
@{ 
    NhanVien nv = new NhanVien();
    if (ViewBag.NV != null)
    {
        nv = ViewBag.NV;
    }
    var SoHDCD = ViewBag.SoHDCD;
    var SoGHCG = ViewBag.SoGHCG;
    var Sum = Convert.ToInt32(SoHDCD) + Convert.ToInt32(SoGHCG);
}
<body class="skin-blue sidebar-mini">
    <script type="text/javascript" src="https://www.gstatic.com/charts/45/loader.js"></script>
    <div class="wrapper">
        <header class="main-header">
